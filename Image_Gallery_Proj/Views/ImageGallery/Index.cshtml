@model List<string>

<div>
    @using (Html.BeginForm("Index", "ImageGallery", FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
        <div class="row">

            <div class="form-group col-md-6">
                <input type="file" class="form-control" name="file" />
            </div>

            <div class="form-group col-md-3">
                <input type="submit" class="btn btn-primary" name="submit" value="Upload" />
            </div>

        </div> 
    }
</div>
<br/>

<div class="container">
    <div class="card border-primary">
        <div class="card-header fw-bold border-primary">
            Image Gallery
        </div>
        <div class="row">
            @if(Model != null && Model.Any())
            {
                @foreach (var imgFileName in Model)
                {
                    <div class="col-md-3 mt-1 mb-1">
                        <div class="alert alert-success">
                            <img src="~/upload/@imgFileName" height="100px" width="200px" />
                        </div>
                    </div>
                }
            }
            else
            {
                <div>Image Not Found</div>
            }
        </div>
    </div>
</div>
